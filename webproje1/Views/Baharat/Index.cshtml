@model IEnumerable<webproje1.Models.Baharat>

@{
    ViewData["Title"] = "Index";
    bool isAdmin = ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin;
}

<h1>Baharatlar</h1>

@if (isAdmin)
{
    <p>
        <a asp-action="Create">Yeni Baharat Ekle</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ad)</th>
            <th>@Html.DisplayNameFor(model => model.Aciklama)</th>
            <th>@Html.DisplayNameFor(model => model.Fiyat)</th>
            <th>Resim</th>
            <th>@Html.DisplayNameFor(model => model.Yore)</th>
            <th>Üretim Tarihi</th>
            <th>@Html.DisplayNameFor(model => model.StoktaMi)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                <td>@Html.DisplayFor(modelItem => item.Aciklama)</td>
                <td>@Html.DisplayFor(modelItem => item.Fiyat)</td>
                <td>
                    <img src="@item.ResimUrl" alt="@item.Ad" style="width:100px; height:auto;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Yore)</td>
                <td>@item.UretimTarihi.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.StoktaMi)</td>
                <td>
                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Duzenle</a>
                        @Html.Raw(" | ")
                        <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                        @Html.Raw(" | ")
                        <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
