@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://fastly.picsum.photos/id/28/4928/3264.jpg?hmac=GnYF-RnBUg44PFfU5pcw_Qs0ReOyStdnZ8MtQWJqTfA" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Özgün Lezzetler</h5>
                <p>Birbirinden özgün lezzetleri keşfedin.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://fastly.picsum.photos/id/11/2500/1667.jpg?hmac=xxjFJtAPgshYkysU_aqx2sZir-kIOjNR9vx0te7GycQ" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Doğal Ürünler</h5>
                <p>Doğanın sunduğu en taze ürünler burada.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://fastly.picsum.photos/id/10/2500/1667.jpg?hmac=J04WWC_ebchx3WwzbM-Z4_KC_LeLBWr5LZMaAkWkF68" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Yöresel Tatlar</h5>
                <p>Yöresel tatlar ile mutfaklarınızı şenlendirin.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Önceki</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Sonraki</span>
    </a>
</div>

<div class="text-center mt-4 welcome-banner">
    <h1 class="display-4">Tadı Damağınızda Kalacak Yöresel Lezzetler</h1>
    <p class="lead">Her bir lokmada Türkiye'nin zengin kültürünü hissedin.</p>
    <a href="/Home" class="btn btn-primary mt-3">Keşfetmeye Başlayın</a>
</div>



<!-- Kategori kartları -->
<div class="container mt-5">
    <div class="row">
        <!-- Kategori 1 -->
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top" src="/images/tambugday.jpeg" alt="Kategori Resmi">
                <div class="card-body">
                    <h5 class="card-title">Ekmekler</h5>
                    <p class="card-text">En taze ekmek çeşitlerimizle tanışın.</p>
                    <a href="#" class="btn btn-primary">Keşfet</a>
                </div>
            </div>
        </div>

        <!-- Kategori 2 -->
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top" src="/images/kekik.jpg" alt="Kategori Resmi">
                <div class="card-body">
                    <h5 class="card-title">Baharatlar</h5>
                    <p class="card-text">Yemeklerinizi tatlandıracak baharatlar.</p>
                    <a href="#" class="btn btn-primary">Keşfet</a>
                </div>
            </div>
        </div>

        <!-- Kategori 3 -->
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top" src="/images/zeytinyagi.jpeg" alt="Kategori Resmi">
                <div class="card-body">
                    <h5 class="card-title">Yağlar</h5>
                    <p class="card-text">Sağlıklı ve doğal yağ seçeneklerimiz.</p>
                    <a href="#" class="btn btn-primary">Keşfet</a>
                </div>
            </div>
        </div>
    </div>
</div>
